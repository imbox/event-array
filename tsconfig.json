{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,

    "strict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
}
